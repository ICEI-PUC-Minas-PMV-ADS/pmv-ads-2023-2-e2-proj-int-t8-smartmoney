@model IEnumerable<smartmoney.Models.Carteira>

@{
    ViewData["Title"] = "Carteiras";
}


<div class="d-flex align-items-center gap-4 mt-5">
    <h1>Carteiras</h1>
    <a class="btn btn-primary fw-bold" asp-action="Create" class="btn btn-primary fw-bold">+ NOVA CARTEIRA</a>
</div>

<div class="d-flex gap-3 mt-4 mb-5"> 
    @foreach (var item in Model)
    {
        <div class="card w-50">
            <div class="card-body ">
                <div class="d-flex align-items-center gap-2">
                    <i class="bi bi-wallet-fill text-primary fs-3"></i>
                    <h4 class="fw-bold pt-2">
                        @Html.DisplayFor(modelItem => item.Titulo)
                    </h4>
                </div>
                <p class="card-title">
                    Saldo atual: R$ @Html.DisplayFor(modelItem => item.Saldo)
                </p>
                <div class="d-flex justify-content-between">
                    <a class="btn btn-primary btn-sm pt-1">Visualizar</a>
                    <div class="pt-2 d-flex gap-3">
                        <a asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-fill"></i></a>
                        <a asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash-fill"></i></a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

