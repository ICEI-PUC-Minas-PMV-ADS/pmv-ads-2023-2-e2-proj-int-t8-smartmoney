@model IEnumerable<smartmoney.Models.Carteira>

@{
    ViewData["Title"] = "Carteiras";
}


<div class="d-flex align-items-center gap-4 mt-5">
    <h1>Carteiras</h1>
    <a class="btn btn-primary fw-bold" asp-action="Create" class="btn btn-primary fw-bold">+ NOVA CARTEIRA</a>
</div>

<div class="d-flex gap-3 mt-4 mb-5"> 
    @foreach (var item in Model)
    {
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">
                    @Html.DisplayFor(modelItem => item.Titulo)
                </h5>
                <a class="btn btn-primary btn-sm fw-bold pt-1">Abrir</a>
                <div class="pt-1">
                    <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
                </div>
            </div>
        </div>
    }
</div>

