@model smartmoney.Models.Carteira

@{
    ViewData["Title"] = "Deletar";
}
<div class="my-5">
    <h1>Deletar Carteira</h1>

    <h3>Tem certeza que deseja deletar essa carteira?</h3>
    <div>
        <hr />
        <dl class="row">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Titulo)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Titulo)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Saldo)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Saldo)
            </dd>
        </dl>
    
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Deletar" class="btn btn-outline-danger" /> 
        </form>
        <div class="pt-2">
            <a asp-action="Index">Voltar</a>
        </div>
    </div>
</div>