@model smartmoney.Models.Categoria

@{
    ViewData["Title"] = "Excluir";
}

<div class="container my-5">
    <h4>Tem certeza que deseja excluir essa categoria?</h4>
    <hr />
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Titulo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Titulo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Tipo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tipo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Usuario)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Usuario.Email)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
            <input type="submit" value="Excluir" class="text-white btn btn-primary fw-bold" /> 
            <a class="text-primary btn fw-bold" asp-action="Index">Voltar</a>
    </form>
</div>
</div>
